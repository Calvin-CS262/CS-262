<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Signup">

    <TextView
        android:id="@+id/signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="180dp"
        android:textSize="20sp"
        android:text="@string/create_a_username_and_password"
        android:fontFamily="serif"
        android:textColor="@color/calvin_maroon"/>

    <EditText
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/username"
        android:inputType="text"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@color/back_gray"
        android:paddingLeft="@dimen/width_dim"
        android:paddingRight="@dimen/width_dim"
        android:paddingTop="@dimen/vertical_dim"
        android:paddingBottom="@dimen/vertical_dim"/>

    <EditText
        android:id="@+id/password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/password"
        android:inputType="textPassword"
        android:layout_below="@+id/username"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@color/back_gray"
        android:paddingLeft="@dimen/width_dim"
        android:paddingRight="@dimen/width_dim"
        android:paddingTop="@dimen/vertical_dim"
        android:paddingBottom="@dimen/vertical_dim"/>

    <Button
        android:id="@+id/signup_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_below="@+id/password"
        android:text="@string/sign_up"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:paddingLeft="@dimen/width_dim"
        android:paddingRight="@dimen/width_dim"
        android:paddingTop="@dimen/vertical_dim"
        android:paddingBottom="@dimen/vertical_dim"
        android:textColor="#FFFFFF"
        android:backgroundTint="@color/calvin_maroon"
        android:onClick="return_to_login"/>

</RelativeLayout>