<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".HomeFragment">

    <!-- TODO: Update blank fragment layout -->
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:src="@drawable/car2"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/createRide_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="350dp"
        android:text="@string/create_a_ride"
        android:backgroundTint="@color/colorPrimary"
        android:textColor="@color/back_gray"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:onClick="launchCreateRide"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/createRide_button"
        android:backgroundTint="@color/colorPrimary"
        android:textColor="@color/back_gray"
        android:paddingRight="60dp"
        android:paddingLeft="60dp"
        android:text="@string/join_a_ride"
        android:onClick="launchJoinRide"/>

</RelativeLayout>